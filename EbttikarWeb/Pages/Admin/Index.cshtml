@page
@model EmployeeManagement.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Admin";
}

<h1 class="toast-header">Administration Portal</h1>
<hr />
<p>
    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
        <i class="bi bi-plus-square"></i> &nbsp;Add Employee
    </a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Admin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin)
            </td>
            <td class="w-25">
                <div class="w-auto btn-group">
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary btn-outline-light">
                        <i class="bi bi-info-circle"></i>&nbsp; Details
                    </a>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-outline-light ">
                        <i class="bi bi-pencil-square"></i>&nbsp; Edit
                    </a>
                </div>

                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger float-end">
                    <i class="bi bi-trash"></i>&nbsp; Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
