@page
@model EmployeeManagement.Pages.Attendance.EditModel

@{
    ViewData["Title"] = "Check Out";
}

<h1>Attendance</h1>

<h4>Checking Out</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="EmployeeAttendance.EmployeeId" type="hidden" class="form-control"/>
                <span asp-validation-for="EmployeeAttendance.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeAttendance.CheckOut" class="control-label"></label>: @DateTime.Now
                <input asp-for="EmployeeAttendance.CheckOut" type="hidden" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="EmployeeAttendance.CheckOut" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="EmployeeAttendance.CheckIn" />
            <input type="hidden" asp-for="EmployeeAttendance.LateCheckIn" />
            <p />
            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-bell-slash"></i>&nbsp; Check Out Now
                </button>
            </div>
        </form>
    </div>
</div>

<hr />
<partial name="_BackToList" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
